<h1>
  List of all directors
</h1>

<hr>
<form action="/insert_director" method="post">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name">
  </div>
  <div>
    <label for="dob">Dob</label>
    <input type="date" id="dob" name="dob">
  </div>
  <div>
    <label for="bio">Bio</label>
    <textarea id="bio" name="bio" rows="3"></textarea>
  </div>
  <div>
    <label for="image">Image</label>
    <input type="text" id="image" name="image">
  </div>
  <button type="submit">Create director</button>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
